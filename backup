enu() {
        echo "-=-=-=-=-=-=-=-=-=-=-=-backup by Kanarskyi Bohdan-=-=-=-=-=-=-=-=-=-=-=-"
        cat <<EOF
Usage: ./backup [SOURCE] [DESTINATION]
SOURCE: path to the directory for which a backup will be created
   for example: /root/
DESTINATION: path to the directory where backup will be saved
   for example: /backup/
EOF
}

